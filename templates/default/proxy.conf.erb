http_address = "<%= @listen_address %>"
redirect_url = "<%= @redirect_url %>"

upstreams = [
  <%= @upstreams.map{|upstream| "\"#{upstream}\""}.join(",\n  ") %>
]

pass_basic_auth = <%= @pass_basic_auth %> 
pass_user_headers = <%= @pass_user_headers %> 

<% unless @basic_auth_password.empty? -%>
basic_auth_password = "<%= @basic_auth_password %>"
<% end -%>

<% if @google_auth_version > 2.0 -%>
email_domain = [
<% @email_domains.each do |d| %>
  "<%= d %>"
<% end %>
]
<% else -%>
google_apps_domains = [
<% @email_domains.each do |d| %>
  "<%= d %>"
<% end %>
]
<% end -%>

client_id = "<%= @client_id %>"
client_secret = "<%= @client_secret %>"

authenticated_emails_file = "<%= @authenticated_emails_file %>"
htpasswd_file = "<%= @htpasswd_file %>"

cookie_secret = "<%= @cookie_secret %>"
cookie_domain = "<%= @cookie_domain %>"
cookie_expire = "<%= @cookie_expire %>"
<% if @google_auth_version > 2.0 -%>
cookie_secure = <%= @cookie_secure %>
cookie_httponly = <%= @cookie_httponly %>
<% else -%>
cookie_https_only = <%= @cookie_secure %>
cookie_httponly = <%= @cookie_httponly %>
<% end -%>
